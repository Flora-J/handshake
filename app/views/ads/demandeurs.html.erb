
<h1 class="text-center display-3">Les annonces de demandes d'aide spécifique</h1>
<div class="container">
<%= render 'static_pages/searchbar_localization'%>  
<%=link_to 'Créer une annonce', new_ad_path, class: 'btn-lg btn-primary'%>
  <div class="row justify-content-center">
    <%@ads.each do |e|%>
      <div class="col-4">
        <%@ad = e%>
        <%=render partial: 'ad_card', object: @ad%>
        
      </div>
    <%end%>
  </div>
</div>