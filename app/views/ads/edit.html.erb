<div class="jumbotron-fluid text-center jumbo jumbo-modif-event">
  <div class="layer"></div>
  <h1 class="display-3 text-light">Modifier l'événement</h1>
</div>
<div class="container mt-5" style="width: 45rem;">
  <%=form_tag ad_path(@event.id), method: 'patch' do%>
    <div class="form-group">
      <label class="h3">Titre</label>
      <%=text_field_tag 'title', @ad.title, class: "form-control"%>
    </div>
    
    <div class="form-group">
      <label class="h3">Durée</label>
      <%=text_field_tag 'adress', @ad.adress, class: "form-control"%>
    </div>
    <div class="form-group">
      <label class="h3">Description</label>
      <%=text_area_tag 'description', @event.description, class: "form-control"%>
    </div>
    <div class="form-group">
      <label class="h3">Prix</label>
      <%=text_field_tag 'zip_code', @ad.zip_code, class: "form-control"%>
    </div>
    <div class="form-group mb-3">
      <label class="h3">Lieu</label>
      <%=text_field_tag 'date', @ad.date, class: "form-control"%>
    </div>
    <div class="form-group mb-3">
      <label class="h3">Lieu</label>
      <%=text_field_tag 'phone', @ad.date, class: "form-control"%>
    </div>
    <div class="form-group d-flex">
      <%=submit_tag 'Modifier', class: "btn btn-primary"%>
      <%=button_to 'Supprimer',event_path(@event.id), method: 'delete', class: "btn btn-danger", style: "margin-left: 1rem;"%>
    </div>
  <%end%>
</div>